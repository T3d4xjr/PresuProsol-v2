  "compilerOptions": {
    "baseUrl": ".",               // raíz del proyecto (donde está este archivo)
    "paths": {
      "@/*": ["src/*"]            // para poder usar import algo from "@/..."
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}
